			<Card
				heading="Práctica profesional"
				subheading="Cosybo - Satellite"
				date="Oct 2024 - Present"
				imagePath="/src/assets/star.png"
				altText="Lorem, ipsum dolor sit"
				imageClass="h-12 w-auto md:-left-16"
			/>
		</Section>

		<Section title="Education">
